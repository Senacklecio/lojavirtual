<?xml version="1.0" encoding="UTF-8"?>
<Context reloadable="true">
	<Resource name="jdbc/loja"
			auth="Container"
			type="javax.sql.DataSource"
			maxActive="100"
			maxIdle="30"
			maxWait="100"
			username="postgres"
			password="postgres"
			validationQuery="SELECT 'OK'"
			
			driverClassName="org.postgresql.Driver"
			url="jdbc:postgresql://localhost:5432/loja?autoReconnect=true"/>
</Context>